<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flip Clock</title>
    <style>
        :root {
            --bg-color: #1a1a1a;
            --text-color: #fff;
            --flip-bg: #333;
            --border-color: #555;
        }

        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: Arial, sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        .clock {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .flip {
            position: relative;
            width: 100px;
            height: 120px;
            perspective: 1000px;
        }

        .flip .top,
        .flip .bottom {
            position: absolute;
            width: 100%;
            height: 50%;
            line-height: 60px;
            text-align: center;
            font-size: 2.5rem;
            background: var(--flip-bg);
            border: 2px solid var(--border-color);
            border-radius: 5px;
        }

        .flip .top {
            top: 0;
            transform-origin: bottom;
        }

        .flip .bottom {
            bottom: 0;
            transform-origin: top;
        }

        .flip.active .top {
            animation: flipTop 0.5s forwards;
        }

        .flip.active .bottom {
            animation: flipBottom 0.5s forwards;
        }

        @keyframes flipTop {
            0% {
                transform: rotateX(0);
            }
            100% {
                transform: rotateX(-90deg);
            }
        }

        @keyframes flipBottom {
            0% {
                transform: rotateX(90deg);
            }
            100% {
                transform: rotateX(0);
            }
        }

        .date-display {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .controls {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }

        .controls input,
        .controls button {
            padding: 10px;
            font-size: 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .controls button {
            background-color: #007bff;
            color: white;
        }

        .controls button.theme-toggle {
            background-color: #444;
        }

        .controls button:hover {
            opacity: 0.9;
        }

        .alarm-message {
            color: #ff4d4d;
            font-weight: bold;
            margin-top: 10px;
        }

        .light {
            --bg-color: #ffffff;
            --text-color: #000000;
            --flip-bg: #e6e6e6;
            --border-color: #cccccc;
        }
    </style>
</head>
<body>
    <div class="date-display" id="dateDisplay"></div>

    <div class="clock">
        <div class="flip" id="hours">
            <div class="top">00</div>
            <div class="bottom">00</div>
        </div>
        <div class="flip" id="minutes">
            <div class="top">00</div>
            <div class="bottom">00</div>
        </div>
        <div class="flip" id="seconds">
            <div class="top">00</div>
            <div class="bottom">00</div>
        </div>
    </div>

    <div class="controls">
        <input type="time" id="alarmTime" />
        <button onclick="setAlarm()">Set Alarm</button>
        <button class="theme-toggle" onclick="toggleTheme()">Toggle Theme</button>
        <div class="alarm-message" id="alarmMessage"></div>
    </div>

    <script>
        // Flip Clock Functionality
        function startClock() {
            const hoursElem = document.getElementById('hours');
            const minutesElem = document.getElementById('minutes');
            const secondsElem = document.getElementById('seconds');
            const dateDisplay = document.getElementById('dateDisplay');

            function updateFlip(element, newValue) {
                const top = element.querySelector('.top');
                const bottom = element.querySelector('.bottom');

                if (top.textContent !== newValue) {
                    bottom.textContent = newValue;
                    element.classList.add('active');

                    setTimeout(() => {
                        top.textContent = newValue;
                        element.classList.remove('active');
                    }, 500);
                }
            }

            function updateClock() {
                const now = new Date();
                const hours = String(now.getHours()).padStart(2, '0');
                const minutes = String(now.getMinutes()).padStart(2, '0');
                const seconds = String(now.getSeconds()).padStart(2, '0');
                const date = now.toDateString();

                updateFlip(hoursElem, hours);
                updateFlip(minutesElem, minutes);
                updateFlip(secondsElem, seconds);
                dateDisplay.textContent = date;
            }

            setInterval(updateClock, 1000);
            updateClock();
        }

        // Alarm Functionality
        let alarmTime = null;

        function setAlarm() {
            alarmTime = document.getElementById('alarmTime').value;
            if (alarmTime) {
                document.getElementById('alarmMessage').textContent = `Alarm set for ${alarmTime}`;
            }
        }

        function checkAlarm() {
            const now = new Date();
            const currentTime = `${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}`;
            if (alarmTime === currentTime) {
                alert("‚è∞ Alarm ringing!");
                document.getElementById('alarmMessage').textContent = "";
                alarmTime = null; // Reset alarm
            }
        }

        setInterval(checkAlarm, 1000);

        // Theme Toggle
        function toggleTheme() {
            document.body.classList.toggle('light');
        }

        // Initialize Clock
        startClock();
    </script>
</body>
</html>
